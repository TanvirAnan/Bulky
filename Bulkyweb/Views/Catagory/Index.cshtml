@model List<Catagory>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">    
                Catagory List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Catagory" asp-action="Create" class="btn btn-primary"> 
                <i class="bi bi-plus-circle"></i>Create New Catagory

            </a>


        </div>

    </div>

     <table class="table table-bordered table-striped"> 
        <thead> 
            <tr>
                <th>
                    Catagory Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
            </tr>
       
        
        </thead>
        <tbody> 
            @foreach(var item in Model.OrderBy(u=>u.DisplayOrder))
            {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                        @item.DisplayOrder
                </td> 
                <td>
                       <div class="w-75 btn-group" role="group">
                            <a asp-controller="Catagory" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mg-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Catagory" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mg-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                </td> 
                
            </tr>
            }
        
       
        </tbody>
    </table>
</div>